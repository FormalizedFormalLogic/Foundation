variable {M : Model Œ±} {T : Theory Œ±} [T.SubformulaClosed']
         (FM : Model Œ±) (filterOf : FM.FilterOf M T)

theorem filteration {x : M.World} {p : Formula Œ±} (hs : p ‚àà T) : x ‚äß p ‚Üî (cast (filterOf.def_world.symm) ‚ü¶x‚üß) ‚äß p := by
  induction p using Formula.rec' generalizing x with
  | hatom a =>
    have := filterOf.def_valuation (cast filterOf.def_world.symm ‚ü¶x‚üß) a;
    simp_all [Satisfies];
  | hnatom a =>
    apply Iff.not;
    have := filterOf.def_valuation (cast filterOf.def_world.symm ‚ü¶x‚üß) a;
    simp_all [Satisfies];
  | hbox p ihp =>
    constructor;
    . intro h Qy rQxQy;
      obtain ‚ü®y, ey‚ü© := Quotient.exists_rep (cast (filterOf.def_world) Qy);
      have this := filterOf.def_box rQxQy; simp [‚Üêey] at this;
      simpa [ey] using ihp (by trivial) |>.mp $ @this p hs h;
    . intro h y rxy;
      have rQxQy := filterOf.def_rel‚ÇÅ rxy;
      exact ihp (by trivial) |>.mpr $ h _ rQxQy;
  | hdia p ihp =>
    constructor;
    . rintro ‚ü®y, Rxy, h‚ü©;
      use ?_;
      constructor;
      . exact filterOf.def_rel‚ÇÅ Rxy
      . exact ihp (by trivial) |>.mp h;
    . intro h;
      obtain ‚ü®Qy, RQxQy, hy‚ü© := h;
      obtain ‚ü®y, ey‚ü© := Quotient.exists_rep (cast (filterOf.def_world) Qy);
      have := filterOf.def_dia (Qy := Qy) RQxQy; simp [‚Üêey] at this;
      exact this p (by trivial) $ @ihp y (by trivial) |>.mpr (by aesop);
  | hand p q ihp ihq =>
    constructor;
    . rintro ‚ü®hp, hq‚ü©; exact ‚ü®ihp (by trivial) |>.mp hp, ihq (by trivial) |>.mp hq‚ü©;
    . rintro ‚ü®hp, hq‚ü©; exact ‚ü®ihp (by trivial) |>.mpr hp, ihq (by trivial) |>.mpr hq‚ü©;
  | hor p q ihp ihq =>
    constructor;
    . rintro (hp | hq);
      . left; exact ihp (by trivial) |>.mp hp;
      . right; exact ihq (by trivial) |>.mp hq;
    . rintro (hp | hq);
      . left; exact ihp (by trivial) |>.mpr hp;
      . right; exact ihq (by trivial) |>.mpr hq;
  | _ => trivial

end

