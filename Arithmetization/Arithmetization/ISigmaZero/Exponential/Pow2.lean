        right; exact ‚ü®q, rfl, pow2_mul_two.mp H‚ü©
      ¬∑ have : p = 1 := le_antisymm (by simpa using hp) (pos_iff_one_le.mp H.pos)
        left; exact this,
   by rintro (rfl | ‚ü®q, rfl, hq‚ü©) <;> simp [pow2_one, pow2_mul_two, *]‚ü©

